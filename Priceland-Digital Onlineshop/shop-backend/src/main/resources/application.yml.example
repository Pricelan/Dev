spring:
  datasource:
    url: jdbc:mysql://localhost:3306/deine_db
    username: root
    password: ${DB_PASSWORD:passwort_hier_ersetzen}
    driver-class-name: com.mysql.cj.jdbc.Driver

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        '[format_sql]': true

server:
  port: 8080
  servlet:
    session:
      cookie:
        same-site: lax
        path: /
        http-only: true
        secure: false  # Wichtig f√ºr localhost ohne HTTPS